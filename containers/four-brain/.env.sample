# Four-Brain System Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ===== DATABASE CONFIGURATION =====
POSTGRES_DB=ai_system
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ===== SUPABASE CONFIGURATION =====
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Intelligence Service Supabase (if different)
INTELLIGENCE_SUPABASE_URL=${SUPABASE_URL}
INTELLIGENCE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
INTELLIGENCE_SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# ===== API KEYS =====
# Hugging Face Token for model downloads
HF_TOKEN=your_huggingface_token_here

# K2/Moonshot API Configuration
K2_API_KEY=your_k2_api_key_here
K2_API_URL=https://api.moonshot.cn/v1/chat/completions
K2_MODEL=kimi-thinking-preview

# GLM Configuration (Z.AI Platform)
GLM_API_KEY=your_glm_api_key_here
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
GLM_MODEL=glm-4-plus
GLM_MODEL_SECONDARY=glm-4-air
GLM_TIMEOUT=300
GLM_MAX_TOKENS=4096
GLM_TEMPERATURE=0.7
GLM_TOP_P=0.9
GLM_THINKING_ENABLED=true
GLM_TEST_MODE=false
GLM_AGENT_API_URL=https://open.bigmodel.cn/api/paas/v4/agent/completions
GLM_AGENT_TIMEOUT=300
GLM_ASYNC_RESULT_TIMEOUT=300
GLM_ASYNC_POLL_INTERVAL=2

# ===== MONITORING CONFIGURATION =====
GRAFANA_PASSWORD=your_grafana_admin_password_here

# ===== ORCHESTRATOR CONFIGURATION =====
ORCHESTRATOR_ENABLED=true
# Set service base URLs
BRAIN1_URL=http://localhost:8011
BRAIN2_URL=http://localhost:8012
BRAIN3_URL=http://localhost:8013
BRAIN4_URL=http://localhost:8010
TRITON_URL=http://localhost:8000

# ===== BUILD CONFIGURATION =====
BUILD_TIMESTAMP=
DOCKER_BUILDKIT=1
BUILDKIT_PROGRESS=plain

# ===== TRITON CONFIGURATION =====
TRITON_MODEL_NAME=qwen3_embedding_8b_trt

# ===== DEVELOPMENT SETTINGS =====
# Set to true for development, false for production
DEBUG_MODE=false
LOG_LEVEL=INFO

# ===== RESOURCE LIMITS =====
# Memory limits (adjust based on your system)
# 32GB system profile
POSTGRES_MEM_LIMIT=4g
REDIS_MEM_LIMIT=2g
EMBEDDING_MEM_LIMIT=8g
RERANKER_MEM_LIMIT=6g
INTELLIGENCE_MEM_LIMIT=8g
DOCUMENT_MEM_LIMIT=12g
TRITON_MEM_LIMIT=16g

# CPU limits (adjust based on your system)
POSTGRES_CPUS=2
REDIS_CPUS=1
EMBEDDING_CPUS=6
RERANKER_CPUS=4
INTELLIGENCE_CPUS=4
DOCUMENT_CPUS=6
ORCHESTRATOR_CPUS=4

# ===== GPU CONFIGURATION =====
# GPU memory fractions for each service
INTELLIGENCE_CUDA_MEMORY_FRACTION=0.15
DOCUMENT_CUDA_MEMORY_FRACTION=0.10

# ===== NETWORK CONFIGURATION =====
# External port mappings
POSTGRES_PORT=5433
REDIS_PORT=6379
EMBEDDING_PORT=8011
RERANKER_PORT=8012
INTELLIGENCE_PORT=8013
DOCUMENT_PORT=8014
ORCHESTRATOR_PORT=9018
TRITON_HTTP_PORT=8000
TRITON_GRPC_PORT=8001
TRITON_METRICS_PORT=8002
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOKI_PORT=3100
ALLOY_PORT=12345
NGINX_HTTPS_PORT=443
NGINX_HTTP_PORT=80
NGINX_STATUS_PORT=8080
DASHBOARD_PORT=3001

# ===== SECURITY SETTINGS =====
# Set to false in production
CORS_ALLOW_ALL=false
TRUSTED_HOSTS_ALL=false
