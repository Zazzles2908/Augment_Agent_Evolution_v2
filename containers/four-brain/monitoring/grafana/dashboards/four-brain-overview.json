{
  "dashboard": {
    "id": null,
    "title": "Four-Brain System Overview",
    "tags": ["four-brain", "production", "overview"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"brain.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(four_brain_requests_total[5m])) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(four_brain_errors_total[5m])) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(four_brain_request_duration_seconds_bucket[5m])) by (job, le))",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(four_brain_memory_used_bytes / four_brain_memory_total_bytes) * 100",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "GPU Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "nvidia_gpu_utilization_percent",
            "legendFormat": "GPU {{gpu}}"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Redis Streams Processing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_streams_processed_total[5m])",
            "legendFormat": "{{stream}}"
          }
        ],
        "yAxes": [
          {
            "label": "Messages/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Self-Grading Scores",
        "type": "graph",
        "targets": [
          {
            "expr": "avg(four_brain_grading_score) by (brain_id)",
            "legendFormat": "{{brain_id}}"
          }
        ],
        "yAxes": [
          {
            "label": "Score",
            "min": 0,
            "max": 1
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "Message Flow Latency",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(four_brain_message_flow_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(four_brain_active_connections) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 40}
      },
      {
        "id": 11,
        "title": "Queue Depth",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(four_brain_queue_depth) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 40}
      },
      {
        "id": 12,
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(four_brain_cache_hits) / sum(four_brain_cache_requests)) * 100",
            "legendFormat": "Hit Rate %"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 40}
      },
      {
        "id": 13,
        "title": "Model Loading Time",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(four_brain_model_load_duration_seconds)",
            "legendFormat": "Avg Load Time"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 40}
      }
    ]
  }
}
